{% extends "layout.html.twig" %}

{% block title %}
	{{ parent() }}
	|
																																																																																																				Details
	{{ article.titre }}
{% endblock %}

{% block body %}

	{% if article.images|length > 1 %}
		{% include "Frontend/Article/_swiper.html.twig" %}
	{% elseif article.images|length == 1 %}
		{% include "Frontend/Article/_banner.html.twig" %}
	{% else %}
		<div class="row text-center mt-4">
			<h1>{{ article.titre }}</h1>
		</div>
	{% endif %}


	<section class="container mt-4">
		<div class="article-main-content">
			{% include "Frontend/Article/_sliderbar.html.twig" %}
			{% include "Frontend/Article/_content.html.twig" %}
		</div>
	</section>
{% endblock %}
