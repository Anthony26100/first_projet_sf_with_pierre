{% extends "layout.html.twig" %}

{% block title %}
	Comments Article |
	{{parent()}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Admin des commentaires</h1>
		<div class="d-flex flex-wrap justify-content-between gap-2 mt-4">
			{% for comment in article.comments %}
				{% include "Frontend/Article/_cardComment.html.twig" %}
				{% include "Backend/Article/_delete_comments.html.twig" %}
				<div class="form-check form-switch">
					<input class="form-check-input" type="checkbox" role="switch" value="{{ comment.id }}" {{ comment.active ? 'checked' }} data-switch-active-comments>
					<label class="form-check-label">Actif</label>
				</div>
			{% endfor %}
		</div>


	{% endblock %}

	{% block javascripts %}
		{{ parent() }}
		{{ encore_entry_script_tags('admin') }}
	{% endblock %}
